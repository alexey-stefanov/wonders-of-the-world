<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparent"
    android:onClick="onClick">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/spacing_32dp"
        android:layout_marginBottom="@dimen/spacing_32dp"
        android:layout_marginStart="@dimen/spacing_16dp"
        android:layout_marginEnd="@dimen/spacing_16dp"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_border"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/thumbnail_detailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_4dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/picture" />

            <TextView
                android:id="@+id/title_detailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_4dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                tools:text="title" />

            <TextView
                android:id="@+id/description_detailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_4dp"
                android:textSize="18sp"
                tools:text="description" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
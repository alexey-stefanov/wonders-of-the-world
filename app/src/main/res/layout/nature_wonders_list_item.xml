<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/card_border"
    android:layout_margin="@dimen/spacing_4dp">

    <ImageView
        android:id="@+id/nature_wonders_item_thumbnail"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="@string/picture" />

    <TextView
        android:id="@+id/nature_wonders_item_title"
        style="@style/TextAppearance.AppCompat.Header"
        tools:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_8dp"
        android:layout_marginEnd="@dimen/spacing_8dp"
        android:layout_marginTop="@dimen/spacing_4dp"
        android:layout_marginBottom="@dimen/spacing_4dp"/>

</LinearLayout>
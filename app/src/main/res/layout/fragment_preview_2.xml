<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_layout_preview_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkTransparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/left_card_border"
        android:layout_marginStart="@dimen/spacing_16dp"
        android:layout_marginTop="@dimen/spacing_32dp"
        android:layout_marginBottom="@dimen/spacing_32dp">

        <ImageView
            android:id="@+id/thumbnail_preview_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/spacing_8dp"
            android:contentDescription="@string/picture"
            app:layout_constraintBottom_toTopOf="@+id/name_preview_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_preview_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_4dp"
            style="@style/TextAppearance.AppCompat.LargeTitle"
            app:layout_constraintBottom_toTopOf="@+id/location_preview_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/thumbnail_preview_2"
            tools:text="name" />

        <TextView
            android:id="@+id/location_preview_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_4dp"
            style="@style/TextAppearance.AppCompat.MediumSubtext"
            app:layout_constraintBottom_toTopOf="@id/type_preview_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_preview_2"
            tools:text="location" />

        <TextView
            android:id="@+id/type_preview_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/location_preview_2"
            tools:text="type" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_ancient_main"
            android:text="@string/button_ancient"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/spacing_8dp"
            android:layout_marginBottom="@dimen/spacing_8dp"
            android:layout_marginStart="@dimen/spacing_8dp"
            style="?android:attr/buttonStyle"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:background="@drawable/button_left_border"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_modern_main"
            android:text="@string/button_modern"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/spacing_8dp"
            android:layout_marginBottom="@dimen/spacing_8dp"
            android:layout_marginEnd="@dimen/spacing_8dp"
            style="?android:attr/buttonStyle"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:background="@drawable/button_right_border"
            android:layout_weight="1"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_main_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>